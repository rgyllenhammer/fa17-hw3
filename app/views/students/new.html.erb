<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @plc_full_name) %>

  <%= label_tag(:fav_class, "Favorite class") %>
  <%= text_field_tag(:fav_class, nil, placeholder: @plc_fav_class) %>

  <%= label_tag(:hobby, "Hobby") %>
  <%= text_field_tag(:hobby, nil, placeholder: @plc_hobby) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("smash that student button") %>
<% end %>
